@page
@model IdentityServer.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="/Admin/UserDetails/Index" asp-route-id="@user.Id" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
